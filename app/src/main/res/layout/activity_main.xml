<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    
    <ImageView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="36dp"
        android:background="@color/black"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textFontWeight="@integer/material_motion_duration_medium_2"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner" />

    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:src="@drawable/start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner" />
    
    <androidx.constraintlayout.widget.Barrier
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="title, startButton"
        android:orientation="vertical"
        app:barrierDirection="bottom"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/about"
        android:layout_width="355dp"
        android:layout_height="166dp"
        android:layout_marginTop="40dp"
        android:text="@string/kinopoisk"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startButton"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/subs1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribe1"
        />
    <TextView
        android:id="@+id/subs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribe2"
        />
    <TextView
        android:id="@+id/subs3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribe3"
        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/subscribe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="subs1, subs2, subs3"
        app:flow_wrapMode="aligned"
        app:layout_constraintTop_toBottomOf="@id/about"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>